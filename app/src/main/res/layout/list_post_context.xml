<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/todo_item_vertical_padding"
    android:paddingTop="@dimen/todo_item_vertical_padding"
    android:paddingRight="@dimen/todo_item_vertical_padding"
    android:paddingBottom="@dimen/todo_item_vertical_padding">


    <TextView
        android:id="@+id/context"
        style="@style/Widget.Inventory.ListItemTextView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/todo_item_vertical_padding"
        android:fontFamily="sans-serif"
        android:textSize="20sp"
        tools:text="Cogs and Widgets" />

</LinearLayout>